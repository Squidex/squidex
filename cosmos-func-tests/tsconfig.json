{
  "compilerOptions": {
    /* Basic Options */
    "target": "es6",                          
    "module": "commonjs",         
    "moduleResolution": "node",
    "inlineSourceMap": true,
    "declaration": false,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,   
    "removeComments": false,             
    "preserveConstEnums": true,    
    "outDir": "JSFiles",                     
    "esModuleInterop": true    ,
    "types": ["jasmine", "node", "jasmine-expect"],                   
  },
  "exclude": [
    "node_modules",
    "asyncAwait",
  ],
  "include":[
    "specs/**/*.ts",
    "pages/*.ts",
    "utils/*.ts",
    "data/*.ts"
  ],
  "compileOnSave": false
}