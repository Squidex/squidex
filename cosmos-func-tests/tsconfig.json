{
  "compilerOptions": {
    "target": "es6",                          
    "module": "commonjs",         
    "moduleResolution": "node",
    "inlineSourceMap": true,
    "declaration": false,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,   
    "removeComments": false,             
    "preserveConstEnums": true,    
    "outDir": "_out",                     
    "esModuleInterop": true,
    "types": [
      "jasmine", 
      "jasmine-expect",
      "node"
    ],                   
  },
  "exclude": [
    "node_modules"
  ],
  "include":[
    "src/**/*.ts",
  ],
  "compileOnSave": false
}