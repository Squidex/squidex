# NOTE: Requires **VS2019 16.3** or later

# Squidex Rules
# Description: Squidex Rules

[*.json]
indent_style = space
indent_size = 4

[*.cs]
charset = utf-8-bom
insert_final_newline = true
indent_style = space
indent_size = 4

